<div class="blog-item blog-item-{{ forloop.index }}">

  {% if section.settings.image_featured %}
  {% if article.image %}
  <div class="blog-image">
    <a href="{{ article.url }}">
      <img class="img-responsive" src="{{ article.image | img_url: image_size }}" alt="{{ article.title }}" />
    </a>
    <div class="post-info">
      <div class="entry-date">
        <span class="date">{{ article.published_at | date: "%d"}}</span>
        <span class="month">{{ article.published_at | date: "%b"}}</span>
      </div>
    </div>
  </div>
  {% endif %}
  {% endif %}

  <div class="blog-info">
    
    <div class="item-right">
      <h3 class="blog-title text-truncate"><a href="{{ article.url }}">{{ article.title }}</a></h3>
      <div class="blog-decs">
        {% if article.excerpt.size > 0 %}
        {{ article.excerpt }}
        {% else %}
        {{ article.content | strip_html | truncatewords: 16 }}
        {% endif %}
      </div>
    </div>                               
  </div>
</div>