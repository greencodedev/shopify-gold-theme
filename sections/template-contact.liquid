      </div>
      {% if section.settings.contact_text_desc != blank %}
      <div class="contact-des">
        {{ section.settings.contact_text_desc }}
      </div>
      {% endif %}
      {% endif %}	
    </div>
    <div class="contact-form style2 col-md-6 col-12">
