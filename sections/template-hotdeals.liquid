{% assign limit_product = section.settings.limit_product %}
<div class="page-hotdeal">
  <div class="container">
    <div class="deal-image">
      {% if section.settings.display_image_cat %}
      <p>
        {% if section.settings.img_cat != blank %}
        <img src="{{ section.settings.img_cat | img_url :"1650x350", crop:'center'}}" alt="{{ collection.title | split: '|' | first }}" />
        {% else %}
        <img class="img-responsive" alt="{{ shop.name }}" src="//placehold.it/1650x350" />
        {% endif %}
      </p>
      {% endif %}
    </div>

    <div class="products-listing grid">
      <div class="product-layout">
        <div class="row">
          {% for product in collections['all'].products %}                          

          {% if product.description contains '[countdown]' and product.available %}
          {% assign countdown = product.content | split: '[/countdown]' | first %}
          {% assign countdown = countdown | split: '[countdown]' | last %}
          <div class="col-xl-3 col-lg-3 col-sm-4 col=12 product">
            {% include 'product-deal' %}
          </div>                            
          {% endif %} 

          {% endfor %}
        </div>
      </div>
    </div>
  </div>

</div>
{% schema %}
  {
    "name": "Hotdeal Page",
    "settings": [
      {
      "type": "header",
      "content": "Setting Hot deal page"
      },
		{
        "type": "checkbox",
        "id": "display_image_cat",
        "label": "Display Image Category?",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "img_cat",
        "label": "Image Category"
      },
	  {
        "type": "text",
        "id": "limit_product",
        "label": "Product items per page",
        "default": "12"
      },
		
	  {
      "type": "header",
      "content": "Tab Show All"
      },
{
          "type": "image_picker",
          "id": "image_all",
          "label": "Icon Show All"
        }
    ]
  }
{% endschema %}
